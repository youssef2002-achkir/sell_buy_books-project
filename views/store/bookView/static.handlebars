<!-- Page Content -->
<div class="container">

    <div class="row">

        <!-- Post Content Column -->
        <div class="col-lg-8">

            <!-- Title -->
            <h1 class="mt-4">{{result.title}}</h1>

            <!-- Author -->
            <p class="lead">by {{result.authors}}</p>
            <hr>

            <!-- Preview Image and Book Info -->
            <div class="row">
                <div class="col-md-5 col-centered">
                    <img class="img-fluid rounded card-img-top" src="{{result.imageURL.thumbnail}}" alt="{{result.title}}">
                </div>

                <div class="col-md-7">
                    <ul class="list-group">
                        <li class="list-group-item">
                            <small>Publisher:</small> {{result.publisher}}</li>
                        <li class="list-group-item">
                            <small>Published Date:</small> {{result.publishedDate}}</li>
                        <li class="list-group-item">
                            <small>Page Count:</small> {{result.pageCount}}</li>
                        <li class="list-group-item">
                            <small>Price:</small> ${{result.price}}</li>
                    </ul>
                </div>
            </div>

            <div style="padding-top: 20px">
                <form method="post" action="/addToCart/{{result.isbn}}">
                    <button type="submit" name="addToCart" class="btn btn-primary" value="{{result.isbn}}">Add to Cart</button>
                </form>
            </div>

            <hr>

            <!-- Post Content -->
            <p class="h3">Description:</p>
            <p class="lead">{{result.description}}</p>
            <hr>
        </div>

        <!-- Sidebar Widgets Column -->
        <div class="col-md-4">

            <!-- Search Widget -->
            <div class="card my-4">
                <p class="h5 card-header">Search</p>
                <div class="card-body">
                    <form action="/search" method="post" id="searchForm">
                        <div class="input-group">
                            <label class="sr-only" for="searchBookTitle">Search for a book title...</label>
                            <input type="text" class="form-control" name="bookTitle" id="searchBookTitle" placeholder="Search for a book title...">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="submit">Search</button>
                            </span>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Categories Widget -->
            <div class="card my-4">
                <p class="h5 card-header">Related Categories</p>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <ul class="list-unstyled mb-0">
                                {{#each result.categories}}
                                <li>
                                    <a href="/category/{{this}}">{{this}}</a>
                                </li>
                                {{/each}}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Side Widget -->
            <div class="card my-4">
                <p class=" h5 card-header">Rating</p>
                <div class="card-body">
                    <p>
                        <small>Average Rating: </small> {{result.averageRating}} out of 5
                    </p>

                    <p>
                        <small>Number of Ratings: </small> {{result.ratingsCount}}
                    </p>
                </div>
            </div>
        </div>

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->