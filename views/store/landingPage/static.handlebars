<header>
    <div class="splash">
        <h1 class="jumbotron-heading">Chapter One</h1>
        <p class="lead text-muted">All Stories Begin with Chapter One</p>
    </div>
</header>

<div class="container">
    <div class="col-lg-12 searchBar">
        <form action="/search" method="post" id="searchForm">
            <div class="input-group">
                <label class="sr-only" for="searchBookTitle">Search for a book title...</label>
                <input type="text" class="form-control" name="bookTitle" id="searchBookTitle" placeholder="Search for a book title...">
                <span class="input-group-btn">
                    <button class="btn btn-default" type="submit">Search</button>
                </span>
            </div>
        </form>
        <!-- /input-group -->
    </div>

    <div class="row">
        <div class="col-lg-2">
            <div class="list-group">
                {{#each categories}}
                <a href="/Category/{{this}}" class="list-group-item">{{this}}</a>
                {{/each}}
            </div>
        </div>

        <div class="col-lg-10">
            <div class="row">
                {{#each result}}
                <div class="col-lg-4 col-sm-6 portfolio-item">
                    <div class="card h-100">
                        <a href="/search/isbn/{{isbn}}">
                            <img class="card-img-top" src={{imageURL.thumbnail}} alt="{{title}}">
                        </a>
                        <div class="card-body">
                            <p class="h3 card-title">
                                <a href="/search/isbn/{{isbn}}">{{title}}</a>
                            </p>
                            <p class="h4">${{price}}</p>
                        </div>
                        <div class="card-footer">
                            <div id="accordion" data-children=".item">
                                <div class="item">
                                    <a data-toggle="collapse" data-parent="#accordion" href="#{{_uuid}}" aria-expanded="true" aria-controls="{{_uuid}}">
                                        View Description Snippet
                                    </a>
                                    <div id="{{_uuid}}" class="collapse" role="tabpanel">
                                        <p class="mb-3">
                                            {{textSnippet}}
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

    </div>
</div>